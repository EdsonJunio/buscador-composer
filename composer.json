{
    "name": "edsonjunio/buscador-composer",
    "description": "Projeto para buscar cursos",
    "type": "library",
    "autoload": {
        "files": [
            "./functions.php"
        ],
        "psr-4": {
            "Edsonjunio\\BuscadorComposer\\": "src/"
        }
    },
    "authors": [
        {
            "name": "EdsonJunio",
            "email": "69820618+EdsonJunio@users.noreply.github.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.8",
        "symfony/dom-crawler": "^7.0",
        "symfony/css-selector": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "squizlabs/php_codesniffer": "^3.9",
        "phan/phan": "^5.4"
    },
    "scripts": {
        "exibe-cursos": "Namespace\\Da\\Classe::metodo",
        "lista": "ls",
        "test": "phpunit tests\\TestBuscadorDeCursos",
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser src\\Buscador.php",
        "check": [
            "@cs",
            "@phan"
        ],
        "post-update-cmd": [
           "@lista"
        ]

    },

    "scripts-descriptions": {
        "check": "Roda as verificações do código. CS, PHAN"
    }
}
